@model Nhom15.Models.TaiKhoanAdmin

@{
    ViewBag.Title = "Profile";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h4>Thông tin tài khoản</h4>
<table class="w-full whitespace-no-wrap">
    <thead>
        <tr class="text-xs font-semibold tracking-wide text-left text-gray-500 uppercase border-b dark:border-gray-700 bg-gray-50 dark:text-gray-400 dark:bg-gray-800">
            <th class="px-4 py-3">
                Tên đăng nhập
            </th>
            <th class="px-4 py-3">mật khẩu</th>
            <th class="px-4 py-3">Họ tên</th>
            <th class="px-4 py-3">Email</th>
        </tr>
    </thead>
    <tbody class="bg-white divide-y dark:divide-gray-700 dark:bg-gray-800">
            <tr class="text-gray-700 dark:text-gray-400">
                <td class="px-4 py-3">
                    <div class="flex items-center text-sm">
                        <div>
                            <p class="font-semibold">@Model.Username</p>
                        </div>
                    </div>
                </td>
                <td class="px-4 py-3 text-sm">
                    @Model.Password
                </td>
                <td class="px-4 py-3 text-sm">
                    @Model.HoTen
                </td>
                <td class="px-4 py-3 text-sm">
                    @Model.Email
                </td>
            </tr>

    </tbody>
</table>

<a class="btn btn-primary col-1" href="/Admin/TaikhoanAdmins/Edit/@Model.Username.Trim()" role="button" style="margin-top:15px;">
    <i class="fas fa-pen-square"></i> Cập nhật</a>

